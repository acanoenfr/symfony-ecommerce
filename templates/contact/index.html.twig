        <div class="col-md-8">
            {{ form(form) }}
        </div>
        <div class="col-md-4">
            <strong>La Boutique Française</strong>
            <hr />
            06 00 00 00 00<br />
            8 rue des Lilas fleuris 75000 Paris.<br />
            contact@laboutiquefrancaise.fr<br />
        </div>
    </div>
{% endblock %}
